# Replit Configuration for Bhoomi Puthra Django Application
run = "pip install -r requirements.txt && python manage.py migrate && python manage.py collectstatic --noinput && python manage.py runserver 0.0.0.0:8000"

# Entry point
entrypoint = "manage.py"

# Language configuration
[languages.python3]
pattern = "**/*.py"

[languages.python3.languageServer]
start = "pylsp"

# Nix configuration - simple Python only
[nix]
channel = "stable-24_05"
