# ==============================================================================
# Bhoomi Puthra - Environment Configuration
# ==============================================================================
# This file contains example environment variables for the Bhoomi Puthra
# Agricultural Forecasting System. Copy this file to .env and update the values.
#
# IMPORTANT: Never commit the .env file to version control!
# ==============================================================================

# Django Settings
# ------------------------------------------------------------------------------
# SECURITY WARNING: Generate a new secret key for production!
# You can generate one using: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here-change-this-in-production

# Set to True only for development, False for production
DEBUG=False

# Comma-separated list of allowed hosts (domains/IPs that can access the application)
# Example: ALLOWED_HOSTS=bhoomiputhra.com,www.bhoomiputhra.com,yourdomain.com,127.0.0.1
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# ------------------------------------------------------------------------------
# For production, consider using PostgreSQL instead of SQLite
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=bhoomi_puthra_db
# DB_USER=postgres_user
# DB_PASSWORD=strong_password_here
# DB_HOST=localhost
# DB_PORT=5432

# Email Configuration (for error notifications and user emails)
# ------------------------------------------------------------------------------
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
DEFAULT_FROM_EMAIL=noreply@bhoomiputhra.com
SERVER_EMAIL=server@bhoomiputhra.com
ADMIN_EMAIL=admin@bhoomiputhra.com

# Static and Media Files
# ------------------------------------------------------------------------------
# For production with cloud storage (AWS S3, Azure Blob, etc.)
# USE_S3=True
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=bhoomi-puthra-media

# Cache Configuration
# ------------------------------------------------------------------------------
# For production, use Redis or Memcached
# REDIS_URL=redis://localhost:6379/1
# CACHE_BACKEND=django_redis.cache.RedisCache

# Security Settings
# ------------------------------------------------------------------------------
# HTTPS settings (enable for production with SSL certificate)
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True

# Application Settings
# ------------------------------------------------------------------------------
# Admin secret key for registration (change this!)
ADMIN_SECRET_KEY=AGRI2026

# Logging
# ------------------------------------------------------------------------------
LOG_LEVEL=INFO

# ==============================================================================
# Development vs Production
# ==============================================================================
# For Development:
#   DEBUG=True
#   ALLOWED_HOSTS=localhost,127.0.0.1
#   Use SQLite database
#   EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
#
# For Production:
#   DEBUG=False
#   ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
#   Use PostgreSQL/MySQL database
#   Configure real SMTP email settings
#   Set up HTTPS/SSL certificates
#   Use cloud storage for media files
#   Use Redis/Memcached for caching
# ==============================================================================
