modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start Django Server"

[[workflows.workflow]]
name = "Start Django Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python manage.py migrate && python manage.py runserver 0.0.0.0:8000"
waitForPort = 8000

[deployment]
run = ["sh", "-c", "python manage.py migrate && python manage.py runserver 0.0.0.0:8000"]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 8000
externalPort = 80
